<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TC_001" configfailurepolicy="continue" verbose="10" parallel="tests" thread-count="5">

    <listeners>
        <listener class-name="com.setup.TestNGListener"/>
    </listeners>

    <parameter name="browser" value="safari"/>

    <test name="TC_01_Example" group-by-instances="true">

        <classes>

        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_01_AccessToken">
            <methods>
                <include name="getAccessToken"/>
            </methods>
        </class>

        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_02_RegisterUser">
            <methods>
                <include name="registerUser"/>
            </methods>
        </class>

        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_03_Authenticate">
            <methods>
                <include name="authentication"/>
            </methods>
        </class>
            
        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_04_SignIn">
            <methods>
                <include name="signIn"/>
            </methods>
        </class>

        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_05_AddUserInfo">
            <methods>
                <include name="addInfo"/>
            </methods>
        </class>

        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_06_UserInfo">
            <methods>
                <include name="getUserObject"/>
            </methods>
        </class>

        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_07_Business">
            <methods>
                <include name="getBusiness"/>
            </methods>
        </class>

        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_08_Menu">
            <methods>
                <include name="getMenu"/>
            </methods>
        </class>

        <class name="com.test.TC_02_Example_HttpClient.Fly.ID_09_Order">
            <methods>
                <include name="setOrder"/>
            </methods>
        </class>

    </classes>
</test>
</suite>




