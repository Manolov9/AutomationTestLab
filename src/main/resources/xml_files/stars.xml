<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TC_001" configfailurepolicy="continue" verbose="10" parallel="tests" thread-count="5">

    <listeners>
        <listener class-name="com.setup.TestNGListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>

    <test name="TC_01_Example" group-by-instances="true">

    <classes>

        <class name="com.test.TC_04_AmelcoAPI.ID_01_LogIn">
            <methods>
                <include name="loginRam"/>
            </methods>
        </class>

        <class name="com.test.TC_04_AmelcoAPI.ID_02_ExternalLogin">
            <methods>
                <include name="externalLogin"/>
            </methods>
        </class>

        <class name="com.test.TC_04_AmelcoAPI.ID_03_GetOpenBets">
            <methods>
                <include name="getOpenBets"/>
            </methods>
        </class>

        <class name="com.test.TC_04_AmelcoAPI.ID_04_PlaceBet">
            <methods>
                <include name="placeBet"/>
            </methods>
        </class>

        <class name="com.test.TC_05_Sumo.UI.ID_01_Promotions">
            <methods>
                <include name="openSumoHomePage"/>
                <include name="checkTable"/>
            </methods>
        </class>

    </classes>
</test>
</suite>




