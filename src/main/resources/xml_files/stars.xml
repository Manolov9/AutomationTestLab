<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TC_001" configfailurepolicy="continue" verbose="10" parallel="tests" thread-count="5">

    <listeners>
        <listener class-name="com.setup.TestNGListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>

    <test name="TC_01_Example" group-by-instances="true">

    <classes>

        <class name="com.test.uat.TC_01_Bet.LogInRam">
            <methods>
                <include name="loginRam"/>
            </methods>
        </class>

        <class name="com.test.uat.TC_01_Bet.ExternalLogin">
            <methods>
                <include name="externalLogin"/>
            </methods>
        </class>

        <class name="com.test.uat.TC_01_Bet.FootballSportTree">
            <methods>
                <include name="getSportsTree"/>
            </methods>
        </class>

        <class name="com.test.uat.TC_01_Bet.PlaceBet">
            <methods>
                <include name="placeBet"/>
            </methods>
        </class>

        <class name="com.test.uat.TC_01_Bet.BetStatus">
            <methods>
                <include name="betStatus"/>
            </methods>
        </class>

        <class name="com.test.uat.TC_01_Bet.OpenBets">
            <methods>
                <include name="openBets"/>
            </methods>
        </class>

        <class name="com.test.uat.TC_01_Bet.CalculateCashout">
            <methods>
                <include name="calcCashout"/>
            </methods>
        </class>

        <class name="com.test.uat.TC_01_Bet.CashoutBet">
            <methods>
                <include name="cashoutBet"/>
            </methods>
        </class>

    </classes>
</test>
</suite>




