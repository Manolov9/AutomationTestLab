<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TC_001" configfailurepolicy="continue" verbose="10"  thread-count="5">
    <parameter name="browser"     value="chrome"/>

    <listeners>
        <listener class-name="com.demo.config.TestNGListener"/>
    </listeners>


    <test name="TC_01">
        <parameter name="environment" value="web-trader"/>
        <classes>
            <class name="com.demo.tests.TestCase_01_PlaceOrder">
                <methods>
                    <include name="web_test"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="TC_02">
        <parameter name="environment" value="web-trader"/>
        <classes>
            <class name="com.demo.tests.TestCase_01_PlaceOrder">
                <methods>
                    <include name="api_user_login"/>
                    <include name="api_get_client_info"/>
                    <include name="api_search_stocks"/>
                    <include name="api_place_order"/>
                    <include name="api_order_confirmation"/>
                    <include name="api_get_orders_history"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>




