<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TC_001" configfailurepolicy="continue" verbose="10"  thread-count="5">
    <!--    ENVIRONMENTS    -->
    <!--    [1] internal    -->
    <!--    [2] web-trader  -->
    <!--    [3] production  -->


    <parameter name="browser"     value="chrome"/>

    <listeners>
        <listener class-name="com.demo.config.TestNGListener"/>
    </listeners>

    <test name="TC_01">
        <parameter name="environment" value="web-trader"/>
        <classes>
            <class name="com.demo.tests.TestCase_01">
                <methods>
                    <include name="loginUser"/>
                    <include name="checkUserInfo"/>
                    <include name="searchForProduct"/>
                    <include name="putOrder"/>
                    <include name="confirmOrder"/>
                    <include name="checkTransactionActivities"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="TC_02">
        <parameter name="environment" value="web-trader"/>
        <classes>
            <class name="com.demo.tests.TestCase_01">
                <methods>
                    <include name="web_test"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>




