<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TC_001" configfailurepolicy="continue" verbose="10" parallel="tests" thread-count="5">

    <listeners>
        <listener class-name="com.demo.config.TestNGListener"/>
    </listeners>

    <parameter name="browser"     value="chrome"/>

    <test name="TC_01_Epam" group-by-instances="true">
    <classes>
        <class name="com.demo.test_suites.TC_01_Epam">
            <methods>
                <include name="accessToken"/>
                <include name="newUser"/>
                <include name="login"/>
                <include name="userInfo"/>
            </methods>
        </class>
    </classes>
</test>
</suite>




